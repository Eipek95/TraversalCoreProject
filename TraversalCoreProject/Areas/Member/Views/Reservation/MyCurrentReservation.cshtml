@model List<EntityLayer.Concrete.Reservation>
@{
    ViewData["Title"] = "MyCurrentReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Aktif Rezervasyonlarım</h1>

@if (Model.Any())
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Lokasyon</th>
            <th>Kişi Sayısı</th>
            <th>Rezervasyon Tarihi</th>
            <th>Durum</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservationID</td>
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@item.ReservationDate</td>
                <td>@item.Status</td>
            </tr>
        }
    </table>
    <script>
        var data = '@TempData["AlertMessage"]'
        if (data == "True") {
            window.onload = (function () {
                swal({
                    title: "Başarılı!",
                    text: "Aktif Rezervasyonlarınız Listelendi",
                    icon: "success",
                    button: "Tamam",
                });
            });
        }
    </script>
}
else
{

    <script>
        var data = '@TempData["AlertMessage"]'
        if (data == "True") {
            window.onload = (function () {
                swal({
                    title: "Başarısız!",
                    text: "Aktif Rezervasyonlarınız Bulunmamaktadır",
                    icon: "error",
                    button: "Tamam",
                });
            });
        }
    </script>
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>