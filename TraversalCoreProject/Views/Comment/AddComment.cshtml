
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir yorum bırakın</h4>
    <p class="mb-4">
        Lüttfen Zorunlu olan işaretli alanları doldurun *
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">
        <div class="form-group">
            <!--//textareaname  and db/columnName(or model in columName property) equals-->
            <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommentUser" class="form-control" placeholder="Adınız Soyadınız*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" name="DestinationID" class="form-control" value="@ViewBag.DestinationId" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary" id="btn1">Yorum Yap </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script charset="utf-8">
    $('#btn1').click(function () {
        var data = '@TempData["AlertMessage"]';
        var data2 = '@TempData["IsSuccess"]';
        swal({
            title: data2,
            text: data,
            icon: data2,
            button:"Tamam"
        });
    });
</script>